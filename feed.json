---
---

{
    "version": "https://jsonfeed.org/version/1",
    "title": "Ryan Irelan",
    "home_page_url": "http://ryanirelan.com",
    "feed_url": "http://ryanirelan.com/feed.json",
    "items": [
      {% for post in site.posts limit:15 %}
        {
            "id": "http://ryanirelan{{ post.id }}",
            "title": "{% if post.layout == 'update' %}{% else %}{{ post.title }}{% endif %}",
            "content_html": "{{ post.content | xml_escape }}",
            {% if post.external-url %}
            "url": "{{ post.external-url }}",
            {% else %}
            "url": "http://ryanirelan{{ post.url }}",
            {% endif %}
            "date_published": "{{ post.date | date_to_xmlschema }}"
        },
        {% endfor %}
    ]
}
